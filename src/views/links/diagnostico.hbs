<script>

    
    const id = {{data.ident}}
    

    const tiempoTranscurrido = Date.now();
    const hoy = new Date(tiempoTranscurrido);
    let time = hoy.toLocaleDateString();
    
    document.getElementById('fechform').value=time

    let da = new Date("{{encodeMyString data.date}}")
    let d = da.toLocaleDateString("fr-CA");
    document.getElementById("date").setAttribute('value', d);


    const btn = document.getElementById("btnpdf")

    btn.addEventListener("click", () => {

        const element = document.getElementById("pdf")
        html2pdf().set({

            margin: 1,
            filename: 'documento.pdf',
            image: {
                type: 'jpeg',
                quality: 0.98
            },

            html2canvas: {

                scale: 3,
                letterRendering: true,
            },
            jsPDF: {
                unit: "in",
                format: "b4",
                orientation: 'landscape'
            }



        }).from(element).save(id).catch(err => console.log(err));


    });



</script>